<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/sign_in_horizontal_margin"
            android:layout_marginTop="20dp"
            android:text="@string/home_description"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/sign_in_passcode_description_text"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/create_event_button"
            layout="@layout/custom_home_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:focusable="true"
            app:buttonIcon="@{@drawable/ic_create_event}"
            app:buttonText="@{@string/home_create_new_event_button}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/description"
            app:showDescription="@{false}" />

        <include
            android:id="@+id/join_event_button"
            layout="@layout/custom_home_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            app:buttonIcon="@{@drawable/ic_join_event}"
            app:buttonText="@{@string/home_join_event_button}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/create_event_button"
            app:showDescription="@{false}" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>