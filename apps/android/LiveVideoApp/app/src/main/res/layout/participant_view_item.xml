<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.twilio.livevideo.app.manager.room.ParticipantWrapper" />
    </data>

    <TableRow
        android:id="@+id/table_row_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="2dp"
            android:paddingVertical="2dp"
            app:setDominantSpeaker="@{item.isDominantSpeakerLiveData}">

            <com.twilio.video.VideoTextureView
                android:id="@+id/videoView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constrainedHeight="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:videoTrack="@{item.videoTrackLivedata}" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#8891AA"
                android:gravity="center"
                android:text="@{item.identityLiveData}"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:visibleOrGone="@{!item.isCameraOnLiveData}" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:layout_marginVertical="6dp"
                android:background="#B2121C2D"
                android:padding="6dp"
                android:text="@{item.identityLiveData}"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="Participant name" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:contentDescription="@null"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_participant_muted"
                app:visibleOrInvisible="@{!item.isMicOnLiveData}" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:contentDescription="@null"
                android:onClick="@{() -> item.onParticipantClick()}"
                android:padding="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ic_dots_horizontal"
                app:visibleOrGone="@{item.isLocalHostLiveData}" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </TableRow>
</layout>