<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.twilio.livevideo.app.viewmodel.SignInViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/sign_in_horizontal_margin"
            android:layout_marginTop="20dp"
            android:text="@string/sign_in_passcode_description"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/sign_in_passcode_description_text"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passcode_input_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/sign_in_horizontal_margin"
            android:layout_marginTop="@dimen/sign_in_between_distance"
            android:hint="@string/sign_in_passcode_label"
            app:layout_constraintTop_toBottomOf="@id/description">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/passcode_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:lines="1"
                android:maxLines="1"
                android:text="@={viewModel.passcode}" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/button_passcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/button_wide_horizontal_margin"
            android:layout_marginTop="@dimen/button_top_margin"
            android:enabled="@{viewModel.continuePasscodeEnabled}"
            android:minHeight="@dimen/sign_in_button_height"
            android:onClick="@{() -> viewModel.onContinuePasscode()}"
            android:text="@string/continue_label"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/passcode_input_layout" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>