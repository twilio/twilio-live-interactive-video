<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/sign_in_horizontal_margin"
            android:layout_marginTop="20dp"
            android:text="@string/home_join_type_description"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/sign_in_passcode_description_text"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/join_as_speaker_button"
            layout="@layout/custom_home_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:buttonDescription="@{@string/home_join_speaker_description}"
            app:buttonIcon="@{@drawable/ic_speaker_icon}"
            app:buttonText="@{@string/home_join_speaker_button}"
            app:showDescription="@{true}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/description" />

        <include
            android:id="@+id/join_as_viewer_button"
            layout="@layout/custom_home_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:buttonDescription="@{@string/home_join_viewer_description}"
            app:buttonIcon="@{@drawable/ic_viewer_icon}"
            app:buttonText="@{@string/home_join_viewer_button}"
            app:showDescription="@{true}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/join_as_speaker_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>